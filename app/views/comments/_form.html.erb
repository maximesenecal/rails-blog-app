<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :pseudo %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :commentaire %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>